<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
    <% if @user.id == params[:id].to_i %>
        <%= simple_form_for @user, url: dashboard_path(@user), method: :patch  do |f| %>
        <%= cl_image_tag(@user.photo,
        width: 250, height: 250, crop: :fill) %>
          <%= f.input :photo%>
          <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="col-sm-4 col-sm-offset-4">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :email %>
          <%= f.submit %>
          <% end %>
    </div>
    <div class="col-sm-4 col-sm-offset-4">
      <%= image_tag("pet_lover.png", width: 400, height: 300, crop: :fill) %>
    </div>
    <hr></hr>
  </div>
</div>
  <%else%>
      <h2>You do not have access to this.</h2>
    <% end %>
