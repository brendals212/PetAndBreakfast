<div class="banner" style="background-image: url(https://petlifetoday.com/wp-content/uploads/2018/06/dog-dewormers.jpg);">
  <div class ="container pt-5">
    <div class="row">
      <div class="col-md-4" >
        <div class="search-container">
          <form action="#" id= "search-form" method="get">
            <h3 class="text-center mb-5">Book Your Next Pet</h2>
              <div class="form-row">
                <div class="col-6 form-group">
                  <label for="location">Location</label>
                  <input type="text" class="form-control" id="location" placeholder="Tel Aviv">
                </div>
              </div>
              <label for="type-of-pet">Type of Animal</label>
              <select id="type-of-pet" class="form-control">
                <option value="">Dog</option>
                <option value="">Cat</option>
                <option value="">Snake</option>
                <option value="">Rabit</option>
                <option value="">Rats</option>
                <option value="">Mice</option>
                <option value="">Rabit</option>
                <option value="">Guinea pigs</option>
                <option value="">Ferrets</option>
                <option value="">Chinchillas</option>
                <option value="">Squirrels</option>
                <option value="">Turtle</option>
                <option value="">Not shown</option>
              </select>
              <input type="submit" value="submit" class="btn btn-success btn-lg w-100">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<h2>Pet for rent at the moment</h2>
<div class="carousel-dimension">

  <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block carou-img" src="https://images.livemint.com/rf/Image-621x414/LiveMint/Period2/2018/06/02/Photos/Processed/pets1-kYdB--621x414@LiveMint.jpg" alt="First slide">
      </div>
      <% @pets.each do |pet|  %>
      <div class="carousel-item">
        <img class="d-block carou-img" src="<%= pet.photo %>" alt="<%= pet.name %>">
      </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
