<div class="banner" style="background-image: url(https://petlifetoday.com/wp-content/uploads/2018/06/dog-dewormers.jpg);">
  <div class ="container pt-5">
    <div class="row">
      <div class="col-md-4" >
        <div class="search-container">
          <h2>Book Your Next Pet</h2>
        <%= form_tag pets_path, method: :get do %>
        <label>Location</label>
        <%= text_field_tag :location,
        params[:location],
        class: "form-control",
        placeholder: "Tel Aviv" %>
        <label> Type of animal</label><br>
        <%= select_tag(:animal, options_for_select(@animal_array)) %><br> <br>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="pet-4-rent">


  <div class="pet-4-rent-content">
    <h2>Pets for rent at the moment</h2>
    <div class="pets-avatar-container">
    <% @pets.first(10).each do |pet| %>
      <%= link_to (cl_image_tag pet.photo, class: "card-trip-user avatar-bordered"), pet_path(pet)%>
    <% end %>
    </div>
  </div>
</div>
